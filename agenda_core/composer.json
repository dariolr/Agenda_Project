{
    "name": "agenda/core",
    "description": "Agenda Platform Core API Server",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "firebase/php-jwt": "^6.10",
        "phpmailer/phpmailer": "^7.0",
        "ramsey/uuid": "^4.7",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Agenda\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Agenda\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8080 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
