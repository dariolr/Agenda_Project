{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (Prod API)",
      "type": "dart",
      "request": "launch",
      "deviceId": "chrome",
      "args": ["--web-port=8080", "--dart-define=API_BASE_URL=https://api.romeolab.it"]
    },
    {
      "name": "Backend (Local API)",
      "type": "dart",
      "request": "launch",
      "deviceId": "chrome",
      "args": [
        "--no-pub",
        "--web-port=8081", 
        "--dart-define=API_BASE_URL=http://localhost:8888"
      ]
    }
  ]
}
